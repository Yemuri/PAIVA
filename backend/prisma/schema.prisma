generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id  String @id @default(uuid())
  nome  String
  email String
  senha String

  create_at DateTime? @default(now())
  update_now DateTime? @default(now())

  @@map("usuarios")
  
}

model Evento{
  id  String @id @default(uuid())
  nome  String
  data  String?
  descricao String? 
  banner String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("eventos")
}

model PrestacaoContas{
  id  String  @id @default(uuid())
  nome  String
  ano String
  banner  String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("prestação_contas")

}
